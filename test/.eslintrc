{
	"globals": {
		"pc": false
	},
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
		"no-inner-declarations": [
			0
		],
		"no-console": [
			0
		]
    },
    "env": {
        "browser": true,
		"mocha": true,
		"node": true
    },
    "extends": "eslint:recommended"
}
